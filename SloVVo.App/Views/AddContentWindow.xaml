<Window x:Class="SloVVo.App.Views.AddContentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SloVVo.App.Views"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:viewModels="clr-namespace:SloVVo.Logic.ViewModels;assembly=SloVVo.Logic"
        mc:Ignorable="d"
        Title="AddItem" Height="150" Width="300" Background="#8C2A27">
    <Window.DataContext>
        <viewModels:AddContentViewModel/>
    </Window.DataContext>
    <Grid>
       <StackPanel Orientation=" Vertical">
            <TextBlock HorizontalAlignment="Center" Background="White">Добави Раздел</TextBlock>
            <TextBox Width="200" Margin="0,20,0,20"></TextBox>
            <Button Content="Добави" Height="30">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Click">
                        <i:InvokeCommandAction Command="{Binding AddContentCommand}"></i:InvokeCommandAction>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </Button>
       </StackPanel> 
    </Grid>
</Window>
